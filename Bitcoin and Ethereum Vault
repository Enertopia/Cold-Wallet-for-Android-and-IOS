// Generate new wallet 
if (walletType == WALLET_TYPE_BITCOIN) {
    seedPhrase = generateSeedPhrase();  // Generate random seed phrase 
} else if (walletType == WALLET_TYPE_ETHEREUM) {
    privateKey = generatePrivateKey();  // Generate random private key
}

// Display seed phrase or private key to user 
if (walletType == WALLET_TYPE_BITCOIN) {
    displaySeedPhrase(seedPhrase); 
} else if (walletType == WALLET_TYPE_ETHEREUM) {
    displayPrivateKey(privateKey);
}

// Prompt user to manually record keys 
boolean recordKeys = promptRecordKeys();

// If user chooses to record keys, have them re-enter to verify 
if (recordKeys) {
    if (walletType == WALLET_TYPE_BITCOIN) {
        verifySeedPhrase(seedPhrase);
    } else if (walletType == WALLET_TYPE_ETHEREUM) {
        verifyPrivateKey(privateKey);
    }
} else {
    // Warn user of risks of not having physical backups of keys 
    displayNoBackupWarning(); 
}

// Encrypt seed phrase or private key and store in Android KeyStore
if (walletType == WALLET_TYPE_BITCOIN) {
    encryptAndStoreSeedPhrase(seedPhrase); 
} else if (walletType == WALLET_TYPE_ETHEREUM) {
    encryptAndStorePrivateKey(privateKey);
}
